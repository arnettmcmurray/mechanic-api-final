              "raw": "{{base_url}}/customers",
              "host": ["{{base_url}}"],
              "path": ["customers"],
              "query": [
                {
                  "key": "email",
                  "value": "alice@example.com"
                }
              ]
            }
          }
        },
        {
          "name": "Update Customer",
