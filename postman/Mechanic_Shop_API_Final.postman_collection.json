    {
      "name": "Negative Tests",
      "item": [
        {
          "name": "GET Mechanics without Token \u2192 401",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/mechanics",
              "host": ["{{base_url}}"],
              "path": ["mechanics"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 401\", function () { pm.response.to.have.status(401); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "POST Customer missing email \u2192 400",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
